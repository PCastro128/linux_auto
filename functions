setgoto () {
    local prefix='/home/paolo/auto/saved_shortcuts/'
    if [ $# -eq 0 ]; then
        local shortcut="${prefix}default"
    else
        local shortcut=$prefix$1
    fi

    echo $(pwd) > $shortcut
}

goto () {
    local prefix='/home/paolo/auto/saved_shortcuts/'
    if [ $# -eq 0 ]; then
        local shortcut="${prefix}default"
    else
        local shortcut=$prefix$1
    fi

    while read -r line
    do
        cd $line
        break
    done < "$shortcut"
}
