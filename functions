GOTO_PREFIX='/home/paolo/saved_shortcuts/'

setgoto () {
    if [ $# -eq 0 ]; then
        local shortcut="${GOTO_PREFIX}default"
    else
        local shortcut=$prefix$1
    fi

    echo $(pwd) > $shortcut
}

goto () {
    if [ $# -eq 0 ]; then
        local shortcut="${GOTO_PREFIX}default"
    else
        local shortcut=$GOTO_PREFIX$1
    fi

    while read -r line
    do
        cd $line
        break
    done < "$shortcut"
}
